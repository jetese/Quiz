<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="329dp"
        android:layout_height="121dp"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Elige nave"
        android:textColor="#fff"
        android:textSize="60sp"
        android:visibility="visible" />

        <ImageButton
            android:id="@+id/ship1"
            android:layout_width="139dp"
            android:layout_height="132dp"
            android:alpha="0.5"
            android:onClick="imageClick"
            android:scaleType="fitCenter"
            android:src="@drawable/ship1"
            android:layout_constraintBottom_toBottomOf="@+id/textVie"
             />

        <ImageButton
            android:id="@+id/ship2"
            android:layout_width="139dp"
            android:layout_height="132dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="145dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/ship1"
            android:layout_toRightOf="@+id/ship1"
            android:alpha="0.5"
            android:onClick="imageClick"
            android:scaleType="fitCenter"
            android:src="@drawable/ship2" />

        <ImageButton
            android:id="@+id/ship3"
            android:layout_width="139dp"
            android:layout_height="132dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="317dp"
            android:alpha="0.5"
            android:onClick="imageClick"
            android:scaleType="fitCenter"
            android:src="@drawable/ship3" />

        <ImageButton
            android:id="@+id/ship4"
            android:layout_width="139dp"
            android:layout_height="132dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="317dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/ship3"
            android:layout_toRightOf="@+id/ship3"
            android:alpha="0.5"
            android:onClick="imageClick"
            android:scaleType="fitCenter"
            android:src="@drawable/ship4" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="147dp"
        android:layout_marginLeft="147dp"
        android:layout_marginBottom="57dp"
        android:text="Menu" />


</FrameLayout>