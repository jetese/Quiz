<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Questions">


    <ImageView
        android:id="@+id/radialImage"
        android:layout_width="181dp"
        android:layout_height="191dp"
        android:layout_above="@+id/radial_group"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="83dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:layout_constraintBottom_toTopOf="@+id/radial_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/black_suit" />


    <RadioGroup
        android:id="@+id/radial_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:padding="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radialImage">

        <RadioButton
            android:id="@+id/radio_answer_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#DF1F2D"
            android:checked="true"
            android:padding="8dp"
            android:text="Volar"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/radio_answer_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#DF1F2D"
            android:padding="8dp"
            android:text="Lanzar TelaraÃ±as"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/radio_answer_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#DF1F2D"
            android:padding="8dp"
            android:text="Encoger"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/radio_answer_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#DF1F2D"
            android:padding="8dp"
            android:text="Invisibilidad"
            android:textColor="#fff" />

    </RadioGroup>
</android.support.constraint.ConstraintLayout>