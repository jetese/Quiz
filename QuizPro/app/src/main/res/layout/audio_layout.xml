<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="70"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="28dp"
                android:background="@drawable/buttonshapecolor"
                android:text="Play"
                android:textColor="#fff" />

            <Button
                android:id="@+id/pause_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@+id/play_button"
                android:background="@drawable/buttonshapecolor"
                android:text="Pause"
                android:textColor="#fff" />

            <Button
                android:id="@+id/stop_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@+id/pause_button"
                android:background="@drawable/buttonshapecolor"
                android:text="Stop"
                android:textColor="#fff" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/audio_rgroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <RadioButton
                android:id="@+id/audio_answer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#df1f2d"
                android:checked="true"
                android:text="RadioButton"
                android:textColor="@color/cardview_light_background" />

            <RadioButton
                android:id="@+id/audio_answer_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#DF1F2D"
                android:text="RadioButton"
                android:textColor="@color/cardview_light_background" />

            <RadioButton
                android:id="@+id/audio_answer_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#DF1F2D"
                android:text="RadioButton"
                android:textColor="@color/cardview_light_background" />

            <RadioButton
                android:id="@+id/audio_answer_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#DF1F2D"
                android:text="RadioButton"
                android:textColor="@color/cardview_light_background" />
        </RadioGroup>

    </LinearLayout>
</LinearLayout>
